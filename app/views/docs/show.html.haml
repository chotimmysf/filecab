.wrapper_with_padding
    #doc_show
        %h1.title= @doc.title
        %p= @doc.context

        .buttons
            = link_to "Fix Doc", edit_doc_path(@doc), class: "button"
            = link_to "Trash Doc", doc_path(@doc), method: :delete, data: { confirm: "Destroy this secret doc?" }, class: "button"
            = link_to "All Docs", docs_path
